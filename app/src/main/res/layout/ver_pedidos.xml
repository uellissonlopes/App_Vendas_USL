<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    android:background="#000052">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#000052"
            android:layout_gravity="right"
            android:layout_weight="0.20" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton_voltar_vp"
                android:src="@mipmap/icoprev"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/fantasia"
                android:id="@+id/textView35"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="5dp"
            android:background="#f8d1fae4">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_clientes_ver_pedidos"
                 />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Data pedido:"
                    android:id="@+id/textView9"
                    android:layout_alignBaseline="@+id/et_data_ver_pedido"
                    android:layout_alignBottom="@+id/et_data_ver_pedido"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/et_data_ver_pedido"
                    android:layout_below="@+id/et_total_ver_pedidos"
                    android:layout_toLeftOf="@+id/bt_voltar_ver_pedidos"
                    android:layout_alignLeft="@+id/et_total_ver_pedidos"
                    android:layout_alignStart="@+id/et_total_ver_pedidos"
                    android:editable="false"
                    android:background="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/total_pedido"
                    android:id="@+id/textView8"
                    android:layout_alignBaseline="@+id/et_total_ver_pedidos"
                    android:layout_alignBottom="@+id/et_total_ver_pedidos"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/et_total_ver_pedidos"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView8"
                    android:editable="false"
                    android:background="#ffffff" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/desconto"
                    android:id="@+id/textView44"
                    android:layout_alignBaseline="@+id/et_desconto_perc"
                    android:layout_alignBottom="@+id/et_desconto_perc"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/et_desconto_perc"
                    android:layout_below="@+id/et_total_com_desconto"
                    android:layout_toLeftOf="@+id/bt_voltar_ver_pedidos"
                    android:layout_alignLeft="@+id/et_total_com_desconto"
                    android:layout_alignStart="@+id/et_total_com_desconto"
                    android:editable="false"
                    android:background="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/total_c_desconto"
                    android:id="@+id/textView45"
                    android:layout_alignBaseline="@+id/et_total_com_desconto"
                    android:layout_alignBottom="@+id/et_total_com_desconto"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/et_total_com_desconto"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView45"
                    android:editable="false"
                    android:background="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_voltar_ver_pedidos"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/voltar"
            android:background="#cecece"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="Produtos do Pedido"
            android:id="@+id/textView3"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#ff5050"
            android:phoneNumber="true"
            android:autoText="false" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView2"
            android:layout_weight="0.20"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=" Qtd."
                        android:id="@+id/textView_qtd"
                        android:textColor="#000000"
                        android:textIsSelectable="false"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:phoneNumber="true"
                        android:background="#d7d7d7" />

                    <TextView
                        android:layout_width="480dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="        Produto       "
                        android:id="@+id/textView_produto"
                        android:textColor="#000000"
                        android:textIsSelectable="false"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="#f8feb4b4"
                        android:phoneNumber="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/preco"
                        android:textColor="#000000"
                        android:textIsSelectable="false"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:phoneNumber="true"
                        android:background="#d7d7d7"
                        android:id="@+id/textView_preco" />
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:showDividers="middle|beginning|end|none"
                    android:divider="#000000">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/tablerow"
                        android:divider="#060606">

                        <ListView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/listView_qtd_produtos_vp"
                            android:layout_column="11"
                            android:background="#ffffff"
                            android:smoothScrollbar="false"
                            android:gravity="center_vertical"
                            android:minHeight="800dp"
                            android:paddingLeft="2dp" />

                        <ListView
                            android:layout_height="wrap_content"
                                    android:id="@+id/listView_nome_produtos_vp"
                                    android:layout_column="12"
                            android:clickable="false"
                            android:background="#f8ffe3e3"
                            android:drawSelectorOnTop="false"
                            android:gravity="center_vertical"
                            android:textFilterEnabled="false"
                            android:paddingLeft="2dp"
                            android:layout_width="300dp" />

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/listView_preco_produtos_vp"
                            android:layout_column="13"
                            android:gravity="center_vertical"
                            android:fastScrollAlwaysVisible="false"
                            android:background="#ffffff"
                            android:paddingLeft="2dp" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>








