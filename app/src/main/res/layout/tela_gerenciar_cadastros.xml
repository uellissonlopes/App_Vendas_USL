<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:fillViewport="false"
    android:clickable="false"
    android:background="#000052">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="#000052"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ib_voltar_gc"
                android:src="@mipmap/icoprev"
                android:background="#00ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CADASTROS"
                android:id="@+id/textView33"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.52" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff9a61"
                android:layout_margin="4dp">

                <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/cadastro"
                android:id="@+id/ib_editar_clientes"
                android:src="@mipmap/iconeeditar_cliente"
                android:background="#00ff1c2f"
                android:adjustViewBounds="false"
                    android:baselineAlignBottom="false" />

                <Button
                    android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:text="@string/editar_clientes"
                    android:textColor="#01064c"
                    android:background="#00ffffff"
                    android:textAlignment="gravity"
                    android:textStyle="bold"
                    android:id="@+id/bt_editar_clientes"
                    android:textSize="22dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eed7af"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_importar_clientes"
                        android:src="@mipmap/icone_import130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_importar_clientes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/importar_cliente"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eed7af"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_cadastrar_clientes"
                        android:src="@mipmap/icone_cad_cliente130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_cadastrar_clientes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/cadastrar_cliente"
                        android:layout_weight="0.20"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eed7af"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_exportar_clientes"
                        android:src="@mipmap/icone_exportar130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_exportar_clientes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/exportar_clientes"
                        android:layout_weight="0.20"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#39f493"
                android:layout_margin="4dp" >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/cadastro"
                    android:id="@+id/ib_editar_produtos"
                    android:src="@mipmap/iconeeditar_prod"
                    android:background="#00ff1c2f"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/editar_produtos"
                    android:textColor="#01064c"
                    android:background="#00ffffff"
                    android:textAlignment="gravity"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:id="@+id/bt_editar_produtos"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b9cdc9"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_importar_produtos"
                        android:src="@mipmap/icone_import130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_importar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/importar_produtos"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b9cdc9"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_cadastrar_produto"
                        android:src="@mipmap/icone_cad_cliente130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_cadastrar_produto"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/cadastrar_produto"
                        android:layout_weight="0.20"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b9cdc9"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_exportar_produtos"
                        android:src="@mipmap/icone_exportar130"
                        android:background="#00ffffff"
                        android:layout_margin="5dp" />

                    <Button
                        android:id="@+id/bt_exportar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/exportar_produtos"
                        android:layout_weight="0.20"
                        android:background="#00ffffff"
                        android:textColor="#01064c"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.20"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="1" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="@string/voltar"
                android:id="@+id/bt_voltar_gc"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:background="#dddddd"
                android:layout_weight="0.05" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>